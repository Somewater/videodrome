<%= form_for(video, html: {class: 'form-horizontal'}) do |f| %>
  <% if video.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= t('video.saving_errors', count: pluralize(video.errors.count, "error")) %></h2>

      <ul>
      <% video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

      <a class="close" data-dismiss="alert">?</a>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, t('.video.title'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, disabled: !video.new_record? %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :watermark, t('.video.watermark'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :watermark %>
    </div>
  </div>


  <% if video.new_record? %>
    <div class="form-group">
      <%= f.label :video_file, t('.video.video_file'), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field(:file, class: 'file_input') %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
